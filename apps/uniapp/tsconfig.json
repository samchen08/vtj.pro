{
  "extends": "../../packages/cli/config/tsconfig.web.json",
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"]
    },
    "lib": ["esnext"],
    "types": ["node", "@dcloudio/types"]
  },
  "include": [
    "shims-uni.d.ts",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "exclude": [".vtj/**/*"],
  "vueCompilerOptions": {
    "nativeTags": ["component", "template", "slot"]
  }
}
